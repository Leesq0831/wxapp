<section id="main-content">
    <section class="wrapper">
    	<h3><i class="fa fa-angle-right"></i>资讯列表</h3>
    	<div class="row">
    		<div class="col-md-12">
    		  <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
              <!-- <h4><i class="fa fa-angle-right"></i>文章</h4>
              <hr> -->
              <thead>
                <tr>
                  <th><i class="fa fa-bullhorn"></i>a</th>
                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> b</th>
                  <th><i class="fa fa-bookmark"></i> c</th>
                  <th><i class=" fa fa-edit"></i> d</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each do |article| %>
                  <tr>
                    <td><%= article.title %></td>
                    <td><%= article.abstract %></td>
                    <td><%= article.published ? "是" : "否" %></td>
                    <td><%= article.status_name %></td>
                    <td>
                      <%= link_to article_path(article), class: 'btn btn-success btn-xs' do %>
                        <i class="fa fa-check"></i>
                      <% end %>
                      <%= link_to edit_article_path(article), class: "btn btn-primary btn-xs" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to article_path(article), method: :delete, data: { confirm: '确定删除？' }, class: "btn btn-danger btn-xs" do %>
                        <i class="fa fa-trash-o "></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
    		</div>
    	</div>

  </section>
</section>